    "@types/node": "^22.7.9",
    "@types/socket.io": "^3.0.1",
    "@types/webpack-dev-server": "^4.7.1",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "html-webpack-plugin": "^5.6.3",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
